<?xml version="1.0" encoding="UTF-8"?>
<pddoc version="1.0">
    <object name="lfo.impulse~">
        <title>lfo.impulse~</title>
        <meta>
            <authors>
                <author>Serge Poltavsky</author>
            </authors>
            <description>Unit-amplitude low-frequency impulse train</description>
            <license>GPL3</license>
            <library>ceammc</library>
            <category>lfo</category>
            <keywords>lfo oscillator</keywords>
            <since>0.1</since>
        </meta>
        <arguments>
            <argument name="freq" type="float" units="herz">frequency</argument>
            <argument name="ID" type="symbol">object ID for OSC control path</argument>
        </arguments>
        <inlets>
            <inlet type="audio">
                <xinfo>frequency in Hz</xinfo>
            </inlet>
        </inlets>
        <outlets>
            <outlet type="audio">output signal</outlet>
        </outlets>
        <example>
        <pdascii>
<![CDATA[
[floatatom]
|
[lfo.impulse~ 440]
|         [tgl]
|  .______/
[*~]
|\
[dac~]
]]>
        </pdascii>
        </example>
    </object>
</pddoc>

